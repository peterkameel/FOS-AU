<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">


    <androidx.cardview.widget.CardView
        android:id="@+id/img_card"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_24px">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/navegationUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Peter Kameel"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Se_text_color" />

    <TextView
        android:id="@+id/navegationUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="peterkameel95@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/Se_text_color" />


</LinearLayout>